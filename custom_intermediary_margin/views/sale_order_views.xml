<odoo>
    <record id="view_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree//field[@name='price_unit']" position="after">
                <field name="unit_price_without_margin_intermediary"
                       modifiers="{'readonly': [('profit_percentage', '!=', order_id.product_id.profit_percentage)]}"/>
                <field name="profit_percentage"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree//field[@name='tax_id']" position="before">
                <field name="intermediary_percentage"/>
            </xpath>
        </field>
    </record>

    <record id="view_sale_margin_sale_order_line_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.line.tree.margin.view.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_margin.sale_margin_sale_order"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='margin']" position="before">
                <label for="intermediary_price" string="Margen intermediario"/>
                <div class="text-nowrap" groups="base.group_user">
                    <field name="intermediary_price" class="oe_inline" widget="monetary"/>
                </div>
                <label for="net_margin" string="Margen neto"/>
                <div class="text-nowrap" groups="base.group_user">
                    <field name="net_margin" class="oe_inline" widget="monetary"/>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
